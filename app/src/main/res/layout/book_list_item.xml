<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/book_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/default_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/thumbnail_mini"
        android:layout_height="@dimen/thumbnail_mini"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_middle_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:layout_toEndOf="@id/thumbnail"
        android:paddingTop="@dimen/default_middle_margin"
        android:paddingBottom="@dimen/default_middle_margin"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:ellipsize="end"
            tools:text="SomeRepo"
            android:lines="1" />

        <TextView
            android:id="@+id/publishedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            tools:text="SomeDescription"
            android:maxLines="2"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="1dp"
        android:background="#2000"/>

</RelativeLayout>